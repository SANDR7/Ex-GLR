// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Tussentabel
// Voor authenticeren
model accounts {
  ID         String         @id @default(cuid())
  email      String         @unique
  wachtwoord String
  student    studenten?
  admin      administrator?
  rol        String         @default("STUDENT")
}

model administrator {
  ID        String   @id @default(cuid())
  accountID accounts @relation(fields: [adminID], references: [ID])
  adminID   String   @unique
  reizen    reizen[]

  naam String
}

model studenten {
  ID        String    @id @default(cuid())
  accountID accounts  @relation(fields: [studentID], references: [ID])
  studentID String    @unique
  geboekt   geboekt[]

  naam                    String
  studentNummer           Int    @map("student_nummer")
  boekingsNummer          Int    @map("boekingsnummer")
  NummerIdentiteitsbewijs Int    @map("identiteits_bewijs")
  Opmerkingen             String?
}

// Reis tabel
model reizen {
  ID              String        @id @default(cuid())
  createdBy       administrator @relation(fields: [administratorID], references: [ID])
  administratorID String
  geboekt         geboekt[]

  titel        String
  bestemming   String
  omschrijving String? 
  beginDatum   DateTime @map("begin_datum")
  eindDatum    DateTime @map("eind_datum")
  maxAantal    Int      @map("max_aantal")
}

// Tussentabel
// Voor geboekte reizen
model geboekt {
  ID        String     @id @default(cuid())
  reisID    reizen?    @relation(fields: [reizenID], references: [ID])
  studentID studenten? @relation(fields: [studentenID], references: [ID])

  reizenID    String?
  studentenID String?
}
